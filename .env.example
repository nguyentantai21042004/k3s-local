##############################################################################
# Environment Variables Example
# Copy this file to .env and customize as needed
# 
# Note: .env file is gitignored for security
##############################################################################

#############################################################################
# K3S Configuration
#############################################################################

# K3s token for cluster authentication
# Default: o+hCbo4yB8IHtEwSJrOJZXmagvpGt0FNc5M5ftx1q4=
K3S_TOKEN=o+hCbo4yB8IHtEwSJrOJZXmagvpGt0FNc5M5ftx1q4=

#############################################################################
# PostgreSQL Configuration
#############################################################################

# PostgreSQL superuser name
# Default: admin
POSTGRES_USER=admin

# PostgreSQL superuser password
# ⚠️ CHANGE THIS to a secure password in production!
# Default: your_secure_password_here
POSTGRES_PASSWORD=your_secure_password_here

# PostgreSQL default database name
# Default: defaultdb
POSTGRES_DB=defaultdb

#############################################################################
# Usage
#############################################################################
#
# 1. Copy this file to .env:
#    cp .env.example .env
#
# 2. Edit .env and customize values as needed
#
# 3. Restart services to apply changes:
#    docker compose down
#    docker compose up -d
#
# Note: If .env file doesn't exist, docker-compose.yaml will use default values

#############################################################################
# MongoDB Configuration
#############################################################################

# MongoDB root username
# Default: admin
MONGO_INITDB_ROOT_USERNAME=admin

# MongoDB root password
# ⚠️ CHANGE THIS to a secure password in production!
# Default: your_mongo_password_here
MONGO_INITDB_ROOT_PASSWORD=your_mongo_password_here

# MongoDB default database name
# Default: defaultdb
MONGO_INITDB_DATABASE=defaultdb

#############################################################################
# RabbitMQ Configuration
#############################################################################

# RabbitMQ default username
# Default: admin
RABBITMQ_DEFAULT_USER=admin

# RabbitMQ default password
# ⚠️ CHANGE THIS to a secure password in production!
# Default: your_rabbitmq_password_here
RABBITMQ_DEFAULT_PASS=your_rabbitmq_password_here
